# This is Git's per-user configuration file.
[user]
name = Hugo Rodger-Brown
email = hugo@yunojuno.com
	signingkey = [****]
[commit]
	gpgsign = true
[pull]
	rebase = false
[credential]
	helper =
	helper = /usr/local/share/gcm-core/git-credential-manager-core
[credential "https://dev.azure.com"]
	useHttpPath = true
[alias]
	sync = "!git fetch origin $1:$1"
	push-new = "!git push --set-upstream origin $(git branch --show-current)"
	tag-release = "!git tag $1 -m 'Release version $1' && git push origin $1"
	purge = "!git ls-files --others --exclude-standard | xargs rm -v"
